{
    "collection": "users",
    "database": "customData",
    "roles": [
        {
            "name": "admin",
            "apply_when": {
                "%%user.custom_data.roles": "admin"
            },
            "document_filters": {
                "write": true,
                "read": true
            },
            "read": true,
            "write": true,
            "insert": true,
            "delete": true,
            "search": true
        },
        {
            "name": "subscriber",
            "apply_when": {
                "userId": "%%user.id"
            },
            "document_filters": {
                "write": {},
                "read": {}
            },
            "read": true,
            "write": false,
            "insert": false,
            "delete": false,
            "search": true
        }
    ]
}
