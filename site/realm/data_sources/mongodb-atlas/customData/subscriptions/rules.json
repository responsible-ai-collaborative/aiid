{
    "collection": "subscriptions",
    "database": "customData",
    "roles": [
        {
            "name": "Owner of the document",
            "apply_when": {
                "%or": [
                    {
                        "%%root.userId": "%%user.id"
                    },
                    {
                        "%%user.custom_data.roles": {
                            "%in": [
                                "admin",
                                "incident_editor"
                            ]
                        }
                    }
                ]
            },
            "read": true,
            "write": true,
            "insert": true,
            "delete": true,
            "search": true
        },
        {
            "name": "default",
            "apply_when": {},
            "read": true,
            "write": true,
            "insert": false,
            "delete": false,
            "search": true
        }
    ]
}